# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  i3bar_command i3bar -t
  status_command i3blocks -v -c ~/.i3/i3-blocks-status
  strip_workspace_numbers yes
  position top
  height $height
  colors {
    separator #121A2A
    background #121A2A
    statusline #DED9B8
    focused_workspace #5B9971 #5B9971 #DED9B8
    active_workspace #5B9971 #5B9971 #121A2A
    inactive_workspace #121A2A #121A2A #DED9B8
    urgent_workspace #99935B #99935B #DED9B8
  }
}
